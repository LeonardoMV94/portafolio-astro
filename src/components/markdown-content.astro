---
interface Props {
  markdown: string;
  class?: string;
}

const { markdown, class: className = '' } = Astro.props;
---
<div 
  class={`prose prose-neutral dark:prose-invert max-w-none ${className}`}
  set:html={markdown}
>
</div>

<style>
  /* Custom styles for markdown content */
  .prose {
    @apply text-neutral-600 dark:text-neutral-400;
  }
  
  .prose h1 {
    @apply text-2xl font-bold mt-10 mb-6 text-neutral-900 dark:text-neutral-100;
  }
  
  .prose h2 {
    @apply text-xl font-semibold mt-8 mb-4 text-neutral-900 dark:text-neutral-100;
  }
  
  .prose h3 {
    @apply text-lg font-semibold mt-6 mb-3 text-neutral-900 dark:text-neutral-100;
  }
  
  .prose h4 {
    @apply text-base font-semibold mt-4 mb-2 text-neutral-900 dark:text-neutral-100;
  }
  
  .prose p {
    @apply mb-4 text-neutral-600 dark:text-neutral-400 leading-relaxed;
  }
  
  .prose strong {
    @apply font-semibold text-neutral-900 dark:text-neutral-100;
  }
  
  .prose em {
    @apply italic;
  }
  
  .prose code {
    @apply bg-neutral-100 dark:bg-neutral-800 px-1 py-0.5 rounded text-sm font-mono text-neutral-800 dark:text-neutral-200;
  }
  
  .prose pre {
    @apply bg-neutral-100 dark:bg-neutral-800 p-4 rounded-lg overflow-x-auto my-4;
  }
  
  .prose pre code {
    @apply bg-transparent p-0 text-sm;
  }
  
  .prose a {
    @apply text-blue-600 dark:text-blue-400 hover:underline;
  }
  
  .prose ul {
    @apply ml-6 mb-4 space-y-1;
  }
  
  .prose ol {
    @apply ml-6 mb-4 space-y-1;
  }
  
  .prose li {
    @apply text-neutral-600 dark:text-neutral-400;
  }
  
  .prose blockquote {
    @apply border-l-4 border-neutral-300 dark:border-neutral-600 pl-4 my-4 italic text-neutral-600 dark:text-neutral-400;
  }
  
  .prose table {
    @apply min-w-full border border-neutral-200 dark:border-neutral-700 rounded-lg my-4;
  }
  
  .prose th {
    @apply px-4 py-2 bg-neutral-50 dark:bg-neutral-800 font-semibold text-left text-neutral-900 dark:text-neutral-100;
  }
  
  .prose td {
    @apply px-4 py-2 text-neutral-600 dark:text-neutral-400 border border-neutral-200 dark:border-neutral-700;
  }
  
  .prose tr {
    @apply border-b border-neutral-200 dark:border-neutral-700;
  }
  
  .prose img {
    @apply rounded-lg max-w-full h-auto;
  }
  
  .prose hr {
    @apply border-neutral-200 dark:border-neutral-700 my-8;
  }
</style> 