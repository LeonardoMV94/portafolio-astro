---
const { link, text, openInNewTab = false } = Astro.props;
---

<a
  href={link}
  target={openInNewTab ? "_blank" : "_self"}
  rel="noopener noreferrer"
  class="inline-flex items-center px-6 py-3 bg-neutral-900 dark:bg-neutral-100 text-white dark:text-neutral-900 rounded-lg hover:bg-neutral-800 dark:hover:bg-neutral-200 transition-colors duration-200 font-medium"
>
  <svg
    class="w-4 h-4 mr-2"
    viewBox="0 0 13 15"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g
      stroke="none"
      stroke-width="1"
      fill="none"
      fill-rule="evenodd"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <g
        transform="translate(0.666667, 2.333333)"
        stroke="currentColor"
        stroke-width="2.4"
      >
        <polyline points="5.33333333 0 10.8333333 5.5 5.33333333 11"></polyline>
        <line x1="10.8333333" y1="5.5" x2="0.833333333" y2="5.16666667"></line>
      </g>
    </g>
  </svg>
  {text}
</a>
