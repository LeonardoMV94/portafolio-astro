---
const { project } = Astro.props;

const urlParsed = new URL(project.demo);
const url = urlParsed.host;
---

<div
  class="bg-neutral-50 dark:bg-neutral-900 rounded-2xl p-6 border border-neutral-200 dark:border-neutral-800 mb-6"
>
  <div class="sticky top-8 space-y-6">
    <div>
      <h5
        class="text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-3"
      >
        Web
      </h5>
      <a
        href={project.demo}
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm text-blue-600 dark:text-blue-400 hover:underline tracking-tight"
      >
        <span class="flex items-center gap-2 dark:text-white">{url}</span>
        <svg class="group-hover:translate-x-0 group-hover:translate-y-0 -rotate-45 translate-y-1 -translate-x-1 w-2.5 h-2.5 stroke-current ml-1 transition-all ease-in-out duration-200 transform" viewBox="0 0 13 15" xmlns="http://www.w3.org/2000/svg">
          <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
            <g transform="translate(0.666667, 2.333333)" stroke="currentColor" stroke-width="2.4">
              <polyline class="transition-all duration-200 ease-out opacity-0 delay-0 group-hover:opacity-100" points="5.33333333 0 10.8333333 5.5 5.33333333 11" />
              <line class="transition-all duration-200 ease-out transform -translate-x-1 opacity-0 group-hover:translate-x-0 group-hover:opacity-100" x1="10.8333333" y1="5.5" x2="0.833333333" y2="5.16666667" />
            </g>
          </g>
        </svg>
      </a>
    </div>
  </div>
</div>
